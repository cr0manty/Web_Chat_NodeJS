<!doctype html>
<html lang="en">
<head>
    <% include blocks/head.ejs %>
    <title>
        Create room
    </title>
</head>
<body>
<% include blocks/header.ejs %>
<div class="container mt-5">
    <div class="row">
        <div class="col-6 offset-md-3">
            <h1 class="mb-3">
                Create new room
            </h1>
            <form action="/create" method="post">
                <div class="form-group">
                    <label for="name">Email address</label>
                    <input type="text" class="form-control" id="name" name="name"
                           placeholder="Name...">
                </div>
                <div class="form-group">
                    <label for="max_user">Max user amount</label>
                    <select multiple class="form-control" id="max_user" name="max_user">
                        <% for (let i = 2; i <= 15; i++) { %>
                            <option><%= i %></option>
                        <% } %>
                    </select>
                </div>
                <div class="form-group">
                    <label for="description">Room description</label>
                    <textarea class="form-control" id="description" name="description" rows="5" placeholder="Description..."></textarea>
                </div>
<!--                todo: upload image-->
<!--                <div class="form-group">-->
<!--                    <label for="image">Room image</label>-->
<!--                    <input type="file" class="form-control-file" id="image" name="image" accept="image/jpeg,image/png,image/gif">-->
<!--                </div>-->
                 <button type="submit" class="btn btn-danger">Create</button>
            </form>
        </div>
    </div>
</div>
</body>
</html>